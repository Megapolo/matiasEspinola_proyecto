<%- include("../partials/head") %>
<%- include("../partials/header")%>
 <h1>Administrador</h1>
 <% if (locals.product) {%>
    <h3><%= product.nombre%></h3>
 <form action="/admin/products/delete/<%= product.id%>?_method=DELETE" method="POST">
    <img src="<%= product.img%>" alt="">
    <li>ID:</li>
    <li><%=product.id%></li>
    <li>Nombre</li>
    <input type="text" name="nombre" id="<%= product.nombre%>" value="<%= product.nombre%>">
    <li>Fabricante</li>
    <input type="text" name="fabricante" value="<%=product.fabricante%>">
    <li>Tipo de producto</li>
    <input type="text" name="tipo" value="<%= product.tipo%>">
    <li>Precio</li>
    <input type="text" name="precio" value="<%=product.precio%>">
    <li>Url de imagen (por ahora)</li>
    <input type="text" name="img" id="<%= product.img%>"value="<%=product.img%>">
    <li>Descuento</li>
    <input type="text" name="descuento" value='<%= product.descuento ? product.descuento : 0 %>'>
    <button type="submit">Aceptar eliminacion</button>
 </form>

 <li><a href="/users/logout">Logout</a></li>
 <% }%>
<%- include("../partials/footer") %>