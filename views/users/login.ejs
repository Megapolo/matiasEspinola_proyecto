<%- include("../partials/head") %>
    <%- include("../partials/header")%>
    <link rel="stylesheet" href="/stylesheets/users/login.css">
    <main>
    <form action="/users/login" method="POST">
      <h3>Inicio de sesion</h3>
      <input type="text" name="email" id="email" placeholder="Ingrese su Email" value="<%= locals.email ? email : ''%>" required>
      <input type="text" name="password" id="password" placeholder="Ingrese su contaseña" required>
      <% if (locals.errors) {%>
        <ul>
        <% for (const key in errors) {%>
          <% if (errors[key].msg) { %>
            <li><%=errors[key].msg%></li>
        <%}}; %>
        </ul>
        <% } %>
      <div class="buttons">
      <a href="/users/register">Registrarme</a>
      <a href="/users/login">Olvide mi clave</a>
      </div>
      <div class="rememberMe">
        <input type="checkbox" name="rememberMe" id="rememberMe">
        <label for="rememberMe">Mantener sesión abierta</label>
      </div>

      <button type="submit">Iniciar sesion</button>
    </form>
  
  </main>
    <%- include("../partials/footer") %>
  </body>
</html>